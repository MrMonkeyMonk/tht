#!/usr/bin/env python3
import sys
import plotext as plt

# TODO: make a help output

xlabel = None
if len(sys.argv) > 1:
  xlabel = sys.argv[1]

ylabel = "Count"
if len(sys.argv) > 2:
  ylabel = sys.argv[2]

# Expected input (e.g. from freq or uniq -c):
'''
   7788 2021-06-21
   9966 2021-06-22
  13204 2021-06-23
  16200 2021-06-24
  10354 2021-06-25
    876 2021-06-26
'''

counts = []
things = []
for line in sys.stdin:
  line = line.strip()
  if line:
    try:
      parts = line.strip().split()
      counts.append(int(parts[0]))
      things.append(' '.join(parts[1:]))
    except ValueError as e:
      print('Skipping invalid data:', line, file=sys.stderr)

if not counts:
  print('No data to plot!', file=sys.stderr)
  sys.exit(1)

plt.bar(things, counts)
plt.plotsize(100, 30)
plt.xlabel(xlabel)
plt.ylabel(ylabel)
plt.show()

# TODO
# labels don't always extend to the last entry on the X-axis, which is very important as the extrema
